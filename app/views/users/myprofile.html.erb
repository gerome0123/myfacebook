<h1>My Profile</h1>
<% @user = current_user %>
<%= image_tag @user.profile.avatar.url, size:"200x200" %>



<p>Name: <%= current_user.profile.firstname + " " + current_user.profile.lastname %></p>
<p>Mobile: <%= current_user.profile.mobile %></p>
<p>About: <%= current_user.profile.about %></p>



<%= link_to 'Edit Profile', {:controller => 'profiles', :id => current_user.profile.id, :action => 'edit'} %>

<br>

<% current_user.posts.each do |p|  %>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="user-name">
        <h4 align="left"> <%= image_tag@user.profile.avatar.url, size:"50x50" %>  <%= current_user.profile.firstname %></h4>
      </div>
      <div class="user-post">
        <h4 align="center">  <%= p.description %></h4>
           <% if p.avatar.present? %>
             <h4 align="center"><%= image_tag p.avatar.url, size:"300x300" %></h4>
           <%else%>
             <h4 align="center"><%#= image_tag p.avatar.url, size:"300x300" %></h4>
           <% end %>


        <h4 align="center">Created at:  <%= time_ago_in_words(p.created_at) %></h4>
      </div>
      <hr>
      <div class="profile-action" align="center">
        
                <td></td>Likes:<%= p.votes_for.size%></td>
      </div>
    </div>
  </div>
</div>
<% end %>