
<% resource.build_profile if resource.profile.nil? %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.fields_for :profile do |profile_fields| %>
<div class="wrap">

      <%#= f.text_field :firstname, autofocus: true, placeholder:"First Name", class:"fn" %>
      <%#= f.text_field :lastname, autofocus: true, placeholder: "Last Name", class:"ln" %>

        <div class="field">
          <%= profile_fields.text_field :firstname, placeholder:"First Name" %>


          <%= profile_fields.text_field :lastname, placeholder:"Last Name" %>

        </div>

    <div class="field">
      <%= profile_fields.number_field :mobile, placeholder:"Mobile" , class:"mob"%>

      <%#= f.number_field :mobile, autofocus: true, placeholder:"Mobile" , class:"mob"%>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder:"Email Address", class:"ea" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", placeholder:"Password", class:"pass"%>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirm Password",class:"compass" %>
    </div>

    <div class="field">
      <%#= f.label :birthday %>
      <%= profile_fields.date_field :birthday, autofocus: true %>
    </div>
    <div class="field">
      <%= profile_fields.label :Gender %>
      <%= profile_fields.label :Gender_male, 'Male' %>
      <%= profile_fields.radio_button :gender, 'Male'%>
      <%= profile_fields.label :Gender_female, 'Female' %>
      <%= profile_fields.radio_button :gender, 'Female' %>
    </div>

    <div class="actions">
      <%= f.submit "Create Account" %>
    </div>
<% end %>
  <% end %>

</div>

