<p id="notice"><%= notice %></p>
<h3 align="center"><%= @post.user.profile.firstname %></h3>
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
              <div class="user-post">

                <h4 align="center"><%= @post.description %></h4>
                <% if @post.avatar.present? %>
                    <h4 align="center"><%= image_tag @post.avatar.url, size:"300x300" %></h4>
                <%else%>
                    <h4 align="center"><%#= image_tag p.avatar.url, size:"300x300" %></h4>
                <% end %>
               <h4 align="center"> Created at: <%=	time_ago_in_words(@post.created_at)%></h4>
              </div>
              <hr>
              <div class="user-comment">
              </div>
            </div>
            <% if current_user == @post.user %>
            <h6 align="right"><%= link_to 'Edit', edit_post_path(@post) %></h6>
            <h6 align="right"><%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' } %></h6>
                <% end %>
            <h6 align="right"> <%= link_to 'Back', posts_path %></h6>
          </div>

        </div>


